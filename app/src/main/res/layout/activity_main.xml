<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aaron.locationgps.MainActivity"
    android:background="@drawable/highway"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/latText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alttitude:"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/latValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/latText"
        android:layout_alignBottom="@+id/latText"
        android:layout_toRightOf="@+id/mapButton"
        android:layout_toEndOf="@+id/mapButton" />
    <TextView
        android:id="@+id/lonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        android:layout_below="@+id/latText"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/lonValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/lonText"
        android:layout_alignBottom="@+id/lonText"
        android:layout_alignLeft="@+id/latValue"
        android:layout_alignStart="@+id/latValue" />
    <TextView
        android:id="@+id/accText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy:"
        android:layout_below="@+id/lonText"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/accValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0m"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/accText"
        android:layout_alignBottom="@+id/accText"
        android:layout_alignLeft="@+id/lonValue"
        android:layout_alignStart="@+id/lonValue" />
    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed:"
        android:layout_below="@+id/accText"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/speedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0m/s"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/speedText"
        android:layout_alignBottom="@+id/speedText"
        android:layout_alignRight="@+id/accValue"
        android:layout_alignEnd="@+id/accValue" />
    <TextView
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_below="@+id/speedText"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/addressValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Map"
        android:layout_below="@+id/addressValue"
        android:layout_centerHorizontal="true"
        android:onClick="showMapAction"
        android:singleLine="false"
        android:background="#00ffffff"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="60dp" />


</RelativeLayout>
